{
	"extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:jsdoc/recommended"],
	"plugins": ["prettier", "jsdoc"],
	"root": true,
	"env": {
		"browser": true,
		"es2022": true,
		"mocha": true,
		"node": true
	},
	"globals": {
		"Log": true,
		"Module": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": "latest",
		"ecmaFeatures": {
			"globalReturn": true
		}
	},
	"rules": {
		"prettier/prettier": "error",
		"eqeqeq": "error"
	}
}
